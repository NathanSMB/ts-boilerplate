{
  "name": "ts-boilerplate",
  "version": "0.0.1",
  "description": "My starting point for Typescript projects.",
  "main": "./dist/main.js",
  "author": "Nathan Burchill <nathan@burchill.io>",
  "license": "MIT",
  "scripts": {
    "build": "npx tsc",
    "start": "npx ts-node ./src/main.ts",
    "start:prod": "node ./dist/main.js",
    "test": "npx jest",
    "watch": "npx tsnd --respawn ./src/main.ts",
    "gendocs": "npx typedoc ./src"
  },
  "dependencies": {
    "reflect-metadata": "latest"
  },
  "devDependencies": {
    "@types/jest": "latest",
    "@types/node": "latest",
    "jest": "latest",
    "ts-jest": "latest",
    "ts-node": "latest",
    "ts-node-dev": "latest",
    "tslint": "latest",
    "typedoc": "latest",
    "typescript": "latest"
  },
  "files": [
    "dist"
  ]
}
